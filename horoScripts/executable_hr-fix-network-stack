#!/usr/bin/env bash

echo stopping network manager...
sudo systemctl stop NetworkManager.service
echo removing module r8169...
sudo modprobe -r r8169
echo waiting befor reinjecting the module...
sleep 1
echo reinjecting the module...
sudo modprobe r8169
echo waiting before starting the Network Manager again...
sleep 1
echo starting the Network Manager...
sudo systemctl start NetworkManager.service
echo done 
